<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.navigationdrawerneatroots.ui.ABP_news1.HomeFragment"

        tools:layout="@layout/fragment_home"
        >
        <action
            android:id="@+id/action_nav_home_to_nav_gallery"
            app:destination="@id/nav_gallery" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.navigationdrawerneatroots.ui.News24.GalleryFragment"

        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.navigationdrawerneatroots.ui.News18.SlideshowFragment"

        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/foxFragment"
        android:name="com.example.navigationdrawerneatroots.Fragment.FoxFragment"

        tools:layout="@layout/fragment_fox" >
        <action
            android:id="@+id/action_foxFragment_self"
            app:destination="@id/foxFragment" />
    </fragment>
    <fragment
        android:id="@+id/BBC_FragmentFragment"
        android:name="com.example.navigationdrawerneatroots.Fragment.BBC_FragmentFragment"

        tools:layout="@layout/fragment_b_b_c__fragment" />
    <fragment
        android:id="@+id/zeeFragment"
        android:name="com.example.navigationdrawerneatroots.Fragment.ZeeFragment"
        android:label="Zee News"

        tools:layout="@layout/fragment_zee" />
</navigation>