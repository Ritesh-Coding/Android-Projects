<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/compose_app_logo"
            android:layout_width="225dp"
            android:layout_height="196dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:src="@drawable/compose_camp_logo" />


        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/compose_app_logo"

            android:layout_centerHorizontal="true"


            android:layout_marginTop="34dp"

            android:text="Ritesh Jaiswal"


            android:textSize="25sp"
            android:textStyle="bold"
            app:fontFamily="sans-serif-black" />

        <ImageView
            android:id="@+id/love"
            android:layout_width="158dp"
            android:layout_height="104dp"
            android:layout_below="@id/compose_app_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:src="@drawable/love" />

        <TextView
            android:id="@+id/compose_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/love"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="52dp"
            android:text="Jetpack Compose"


            android:textSize="30sp"
            android:textStyle="bold"
            app:fontFamily="sans-serif-black"


    </RelativeLayout>

